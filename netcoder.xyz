server {
    listen 80;
    server_name netcoder.xyz;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name netcoder.xyz;

    ssl_certificate     /etc/letsencrypt/live/netcoder.xyz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/netcoder.xyz/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;

    # HTTP/2 + long-lived stream timeouts
    http2_idle_timeout 5m;
    client_header_timeout 1h;
    client_body_timeout 1h;
    send_timeout 1h;
    keepalive_timeout 65;
    keepalive_requests 100000;

    location / {
        return 200 "ok\n";
        add_header Content-Type text/plain;
    }

    location ^~ /Tun {
        grpc_pass grpc://127.0.0.1:20000;

        grpc_set_header Host $host;
        grpc_set_header X-Real-IP $remote_addr;
        grpc_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        grpc_set_header TE trailers;

        grpc_connect_timeout 60s;
        grpc_read_timeout 1h;
        grpc_send_timeout 1h;
    }
}
