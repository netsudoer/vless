server {
    listen 443 ssl http2;
    server_name netcoder.xyz;

    ssl_certificate /etc/letsencrypt/live/netcoder.xyz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/netcoder.xyz/privkey.pem;

    location /ray {
        proxy_redirect off;
        proxy_pass http://127.0.0.1:10000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }

    location / {
        return 404;
    }
}
